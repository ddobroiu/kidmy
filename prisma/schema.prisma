// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String   @id @default(cuid())
  username           String   @unique
  email              String   @unique
  passwordHash       String
  createdAt          DateTime @default(now())
  emailVerified      DateTime?
  credits            Int      @default(0) // Credits awarded after verification
  totalCreditsUsed   Int      @default(0)
  subscriptionTier   String   @default("FREE") // FREE, BASIC, PRO, PREMIUM
  lastCreditRefill   DateTime @default(now())
  apiKey             String?  @unique @default(cuid())
  
  // Relations
  generations        Generation[]
  creditTransactions CreditTransaction[]
  purchases          Purchase[]
  billingDetails     BillingDetails?
  shopPurchases      ShopPurchase[]
}

model BillingDetails {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type        String   @default("personal") // personal, company
  firstName   String?
  lastName    String?
  companyName String?
  cui         String?  // VAT ID
  regCom      String?  // J-number
  address     String
  city        String
  state       String?
  country     String
  zip         String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String   // user email
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())

  @@index([identifier])
  @@index([token])
}

model PasswordResetToken {
  id         String   @id @default(cuid())
  identifier String   // user email
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())

  @@index([identifier])
  @@index([token])
}

model Generation {
  id               String   @id @default(cuid())
  userId           String
  originalImageUrl String
  prompt           String?
  videoUrl         String?
  modelUrl         String?
  status           String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  creditsCost      Int      @default(1)
  processingTime   Int?     // in seconds
  quality          String   @default("STANDARD") // STANDARD, HIGH, ULTRA
  hostEnabled      Boolean  @default(false)
  hostUrl          String?
  hostingPaidUntil DateTime?
  autoRenewal      Boolean  @default(false)  // If true, system tries to deduct credits automatically
  createdAt        DateTime @default(now())
  completedAt      DateTime?
  errorMessage     String?
  views            Int      @default(0)
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model CreditTransaction {
  id          String   @id @default(cuid())
  userId      String
  amount      Int      // positive for add, negative for use
  type        String   // PURCHASE, GENERATION_USE, REFUND, BONUS, SHOP_PURCHASE
  description String
  createdAt   DateTime @default(now())
  purchaseId  String?  // Reference to purchase if applicable
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([type])
  @@index([createdAt])
}

model Purchase {
  id              String   @id @default(cuid())
  userId          String
  stripeSessionId String?  @unique
  amount          Float    // price in RON/EUR
  credits         Int      // credits purchased
  status          String   @default("PENDING") // PENDING, COMPLETED, FAILED, REFUNDED
  currency        String   @default("RON")
  createdAt       DateTime @default(now())
  completedAt     DateTime?
  
  // Invoice Details
  invoiceSeries   String?
  invoiceNumber   String?
  invoiceUrl      String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([stripeSessionId])
  @@index([status])
}

model CreditPackage {
  id          String  @id @default(cuid())
  name        String
  credits     Int
  price       Float   // in RON/EUR
  currency    String  @default("RON")
  popular     Boolean @default(false)
  bonus       Int     @default(0) // extra credits as bonus
  active      Boolean @default(true)
  
  @@unique([credits, price])
}

model ShopItem {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Int      @default(0) // Price in credits
  category    String   // Characters, Fashion, Vehicles, Architecture, etc.
  modelUrl    String   // URL in R2
  imageUrl    String   // Thumbnail URL
  polys       String?  // e.g. "12k"
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  purchases   ShopPurchase[]

  @@index([category])
  @@index([isPublic])
}

model ShopPurchase {
  id        String   @id @default(cuid())
  userId    String
  itemId    String
  pricePaid Int      // store price at purchase moment
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  item      ShopItem @relation(fields: [itemId], references: [id], onDelete: Cascade) // Relation to ShopItem
  
  @@unique([userId, itemId]) // Prevent double purchase
}
